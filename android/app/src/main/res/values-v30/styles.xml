<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- API 30+ specific styles for modern Android devices -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <!-- Status bar configuration -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar configuration -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Modern system UI handling -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Prevent fullscreen mode -->
        <item name="android:windowFullscreen">false</item>
        <!-- Modern display cutout handling -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Disable translucent bars -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Force system bars visibility -->
        <item name="android:enforceStatusBarContrast">true</item>
        <item name="android:enforceNavigationBarContrast">true</item>
    </style>
</resources>
